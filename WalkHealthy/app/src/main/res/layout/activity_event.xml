<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kevin.walkhealthy.MainActivity">


    <Button
        android:id="@+id/btnSearchEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnCreateEvent"
        android:layout_centerHorizontal="true"
        android:text="search" />

    <TextView
        android:id="@+id/eventNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="51dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <EditText
        android:id="@+id/editTextLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnSearchEvent"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Enter Event Location"
        android:inputType="textPersonName"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnCreateEvent"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Create An Event" />

    <TextView
        android:id="@+id/eventStartingLocationTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/eventNameTextView"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/eventDateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/eventStartingLocationTextView"
        android:layout_alignStart="@+id/eventStartingLocationTextView"
        android:layout_below="@+id/eventStartingLocationTextView"
        android:layout_marginTop="12dp" />

    <ListView
        android:id="@+id/eventList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/editTextLocation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="190dp" />

    <Button
        android:id="@+id/searchRefinement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editTextLocation"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp"
        android:text="Refine Search" />

    <Spinner
        android:id="@+id/refinementSpinner0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/refinementSpinner1"
        android:layout_alignEnd="@+id/refinementSpinner1"
        android:layout_alignRight="@+id/refinementSpinner1"
        android:layout_marginBottom="11dp"
        android:entries="@array/Refined" />

    <Spinner
        android:id="@+id/refinementSpinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/searchRefinement"
        android:layout_alignEnd="@+id/refinementSpinner2"
        android:layout_alignRight="@+id/refinementSpinner2"
        android:entries="@array/Refined" />

    <Spinner
        android:id="@+id/refinementSpinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/searchRefinement"
        android:layout_alignBottom="@+id/searchRefinement"
        android:layout_alignEnd="@+id/btnSearchEvent"
        android:layout_alignRight="@+id/btnSearchEvent"
        android:entries="@array/Refined" />

    <Button
        android:id="@+id/addRefinement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnSearchEvent"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:text="Add new refinement" />

</RelativeLayout>
